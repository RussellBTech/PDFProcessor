<Window x:Class="PDFProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Processor" Height="200" Width="400">
    <Grid>
        <Label Content="Desired Folder Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="FolderPathTextBox" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <Button Content="Process" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="75" Click="ProcessButton_Click"/>
    </Grid>
</Window>
